
public class Main {

	public static void main(String[] args) {
		
		TV tv = new TV();
		
		imprimeMenu(tv);
		
		tv.botaoOnOff();
		
		imprimeMenu(tv);

	}

	
	static void imprimeMenu(TV tv) {
		System.out.println();
		System.out.println("-----------MENU----------/");
		System.out.println(tv.isLigada() ? "Desligar TV ...........(1)" : "Ligar TV ..............(1)");
		System.out.println("Verificar portas ......(2)");
		System.out.println("Menu de portas ........(3)");
		System.out.println("Adicionar porta .......(4)");
		System.out.println("Abrir ou fechar porta .(5)");
		System.out.println("Sair ..................(0)");
		System.out.println();
	}
}
